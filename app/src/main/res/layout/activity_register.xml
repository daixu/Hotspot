<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".view.register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机注册"
                        android:textColor="#ffff5d53"
                        android:textSize="@dimen/sp_25" />

                    <View
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#FF5D53" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机注册"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_20" />

                    <View
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#E1E1E1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="start|bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_email_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱注册"
                        android:textColor="#ffff5d53"
                        android:textSize="@dimen/sp_25" />

                    <View
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#FF5D53" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_email_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱注册"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_20" />

                    <View
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="3dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="#E1E1E1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15">

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="+86"
                    android:textColor="#ff535e6a"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_11"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/icon_drop_down" />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/main_body_major_color"
                android:textColorHint="#ffd0d0d0"
                android:textSize="@dimen/sp_20" />

            <Button
                android:id="@+id/btn_send_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_rectangle_origin"
                android:elevation="0dp"
                android:gravity="center"
                android:outlineProvider="none"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="获取验证码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"
                tools:targetApi="lollipop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入邮箱地址"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_25"
                android:paddingLeft="@dimen/dp_25"
                android:paddingEnd="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/main_body_major_color"
                android:textColorHint="#ffd0d0d0"
                android:textSize="@dimen/sp_20" />

            <Button
                android:id="@+id/btn_mail_ver_code"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_rectangle_origin"
                android:elevation="0dp"
                android:gravity="center"
                android:outlineProvider="none"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="获取验证码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"
                tools:targetApi="lollipop" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="#E1E1E1" />

        <EditText
            android:id="@+id/edit_mail_ver_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:hint="请输入6位数的邮箱验证码"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:singleLine="true"
            android:textColor="@color/main_body_major_color"
            android:textColorHint="#ffd0d0d0"
            android:textSize="@dimen/sp_20"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_ver_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:hint="验证码"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:singleLine="true"
            android:textColor="@color/main_body_major_color"
            android:textColorHint="#ffd0d0d0"
            android:textSize="@dimen/sp_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="#E1E1E1" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:singleLine="true"
            android:textColor="@color/main_body_major_color"
            android:textColorHint="#ffd0d0d0"
            android:textSize="@dimen/sp_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="#E1E1E1" />

        <EditText
            android:id="@+id/edit_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:hint="请重复输入登录密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:singleLine="true"
            android:textColor="@color/main_body_major_color"
            android:textColorHint="#ffd0d0d0"
            android:textSize="@dimen/sp_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="#E1E1E1" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_21"
            android:background="@drawable/shape_button_rectangle_origin_gradient"
            android:elevation="0dp"
            android:gravity="center"
            android:outlineProvider="none"
            android:text="注册"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_20"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50">

            <CheckBox
                android:id="@+id/check_user_agreement"
                style="@style/checkBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                android:paddingStart="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:text="同意极热区账号的"
                android:textColor="#ff666666"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="《用户协议》"
                android:textColor="#7A95F5"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>